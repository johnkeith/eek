source 'https://rubygems.org'
ruby '1.9.3'

gem 'devise'
gem 'bootstrap-sass'
gem 'bootstrap_form'
gem 'font-awesome-sass'
gem 'js-routes'
gem 'rails', '4.0.1'
gem 'dragonfly', "~>1.0.3"
gem 'will_paginate'
gem 'bootstrap-will_paginate'
gem 'configurable_engine'

# Default gems

gem 'sass-rails', '~> 4.0.0'

gem 'uglifier', '>= 1.3.0'

gem 'coffee-rails', '~> 4.0.0'

gem 'jquery-rails'

gem 'turbolinks'

gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development, :test do
	gem 'sqlite3'
  gem 'rspec-rails'
end

group :test do
  gem 'selenium-webdriver'
  gem 'capybara'
end

group :production do
	gem 'pg'
	gem 'rails_12factor'
end
