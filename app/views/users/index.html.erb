<h1>User Account Settings</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Sign in count</th>
      <th>Last sign in at</th>
      <th>Current sign in IP</th>
      <th>Admin</th>
      <th>Reading rights</th>
      <th>Writing rights</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.sign_in_count %></td>
        <td><%= user.last_sign_in_at %></td>
        <td><%= user.current_sign_in_ip %></td>
        <td><%= user.admin %></td>
        <td><%= user.read_right %></td>
        <td><%= user.write_right %></td>
        <td><%= link_to "Destroy", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } unless user.admin == true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
